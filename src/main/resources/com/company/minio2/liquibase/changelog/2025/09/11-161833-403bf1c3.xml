<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="Minio-2">
        <createTable tableName="ATTACHMENT">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_ATTACHMENT"/>
            </column>
            <column name="FILE_" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="Minio-2">
        <createTable tableName="FILE_">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_FILE_"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="FOLDER_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="Minio-2">
        <createTable tableName="FOLDER">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_FOLDER"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="PARENT_ID" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="Minio-2">
        <createTable tableName="PERMISSION">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_PERMISSION"/>
            </column>
            <column name="PERMISSION_TYPE" type="INT"/>
            <column name="USER_ID" type="UUID"/>
            <column name="FILE_PATH" type="VARCHAR(255)"/>
            <column name="PERMISSION_MASK" type="INT"/>
            <column name="ROLE_CODE" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="Minio-2">
        <createIndex indexName="IDX_FILE__FOLDER" tableName="FILE_">
            <column name="FOLDER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="FOLDER_ID" baseTableName="FILE_" constraintName="FK_FILE__ON_FOLDER"
                                 referencedColumnNames="ID" referencedTableName="FOLDER"/>
    </changeSet>
    <changeSet id="6" author="Minio-2">
        <createIndex indexName="IDX_FOLDER_PARENT" tableName="FOLDER">
            <column name="PARENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="PARENT_ID" baseTableName="FOLDER" constraintName="FK_FOLDER_ON_PARENT"
                                 referencedColumnNames="ID" referencedTableName="FOLDER"/>
    </changeSet>
    <changeSet id="7" author="Minio-2">
        <createIndex indexName="IDX_PERMISSION_USER" tableName="PERMISSION">
            <column name="USER_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="USER_ID" baseTableName="PERMISSION"
                                 constraintName="FK_PERMISSION_ON_USER" referencedColumnNames="ID"
                                 referencedTableName="USER_"/>
    </changeSet>
</databaseChangeLog>